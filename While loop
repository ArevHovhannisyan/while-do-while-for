// While loop is cheking the condition as long as time,when "while loop" is true

// Необходимо суммировать все нечётные целые числа в диапазоне, 
// который введёт пользователь с клавиатуры.

#include <iostream>
using namespace std;

int main()
{
    int start = 0;
    int finish = 0;
    int sum = 0;
    
    cout << "Enter the start of range: ";
    cin >> start;
    cout << "Enter the finish of range: ";
    cin >> finish;
    
    int i = start;
    while(i <= finish)
    {
        if (i % 2 != 0)
        {
            cout << i << "  "; 
            sum += i; 
        } 
        i++;
    }
     
    
    cout << "\nsum is uneven numbers of average in " << start << " to "<< finish;
    cout <<" = " <<sum <<endl<<endl;;
    

    return 0;
}
