// For loop we use when we have the condition to started and finished the operation
// in loop what us necessary.That loop is testing as long while the condition is true.

// Написать программу, которая будет показывать на экран квадрат числа,  
// введенного пользователем. Пользователь должен сам решать –  выйти из программы или продолжить ввод.
#include <iostream>
using namespace std;

int main()
{
    int i = 0;    
    
    for(i = 0; i < 10; i++)
    {
        cin >> i;
        cout << "[" <<i<< "] = "<< i * i << endl;
    }
    cout << endl;
    
    return 0;
}


// Необходимо вывести на экран таблицу умножения на 3:

#include <iostream>
using namespace std;

int main()
{
    for(int i = 1; i <= 9; i++)
    {
        cout << "[3 * " << i << "] = " << i * 3 << endl;
    }
    
    return 0;
}